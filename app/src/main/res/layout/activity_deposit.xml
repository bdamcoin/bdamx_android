<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <include layout="@layout/toolbar_header_common"
        android:id="@+id/include2"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"


                android:padding="10dp"
                android:elevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        app:cardCornerRadius="5dp"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/Colorbg"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:elevation="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:padding="5dp"
                                    android:text="Balance"
                                    android:textColor="@color/Colortext"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text=" : "
                                    android:textColor="@color/Colortext"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/totalamount"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:padding="5dp"
                                    android:gravity="end"
                                    android:text="0.00525878 BTC"
                                    android:textColor="@color/Colortext"
                                    android:textSize="12sp" />

                            </LinearLayout>



                            <LinearLayout
                                android:id="@+id/detailsLinear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible"
                                android:elevation="1dp">






                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:padding="5dp"
                                    android:text="Frozen"
                                    android:textColor="@color/Colortext"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text=" : "
                                    android:textColor="@color/Colortext"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/availableamount"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:padding="5dp"
                                    android:gravity="end"
                                    android:text="0.00525878 BTC"
                                    android:textColor="@color/Colortext"
                                    android:textSize="12sp" />


                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout

                    android:id="@+id/depositLayout"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:gravity="center">

                        <ImageView

                            android:src="@drawable/scan"
                            android:id="@+id/scanaddressimg"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:elevation="3dp"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Send your Bitcoin to this Address"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/Colortext"/>


                        <TextView
                            android:id="@+id/coinAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1HDWNck26vcRos43jtpXBfbumQEnWrKhaF"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/Colortext"/>

                        <TextView
                            android:id="@+id/coinAddress1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textColor="@color/Colortext"/>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">
                            <RelativeLayout
                                android:id="@+id/copyimg"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/copyimg1"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:tint="@color/colorWhite"
                                    android:layout_gravity="center"
                                    android:src="@drawable/copy" />
                                <TextView android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_toRightOf="@+id/copyimg1"
                                    android:gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/Colortext"
                                    android:text="Copy"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/shareimg"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_marginLeft="10dp"
                                    android:id="@+id/shareimg1"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:tint="@color/colorWhite"
                                    android:layout_gravity="center"
                                    android:src="@drawable/share" />

                                <TextView android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:textColor="@color/Colortext"
                                    android:gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toRightOf="@+id/shareimg1"
                                    android:text="Share"/>
                            </RelativeLayout>

                        </LinearLayout>

                        <View android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/Colortext"/>


                        <TextView
                            android:id="@+id/txtAddressBTC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Importance Notice"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:layout_marginTop="30dp"
                            android:textColor="@color/yellowBg"/>

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:id="@+id/depoContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Please deposit your amount above to the BTC Address"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textColor="@color/Colortext"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>