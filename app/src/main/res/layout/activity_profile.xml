<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar_header_common"/>

    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout android:layout_width="130dp"
                android:layout_height="73dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/mProfile"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/pr"/>

                <ImageView android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="28dp"
                    android:visibility="visible"
                    android:id="@+id/mEditbtn"
                    android:tint="@color/ColorHint"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/ic_edit"/>
            </RelativeLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile Information"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>


                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text"
                        android:orientation="horizontal">
                        <EditText android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textSize="14dp"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:text=""
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:background="@null"
                            android:textColorHint="@color/ColorHint"
                            android:textColor="@color/Colortext"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:id="@+id/mUsernameEdittext"
                            android:imeOptions="actionNext"
                            android:hint="Firstname"/>

                        <ImageView android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:tint="@color/colorPrimary"
                            />

                    </LinearLayout>




                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text"
                        android:orientation="horizontal">
                        <EditText android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textSize="14dp"
                            android:background="@null"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textColorHint="@color/ColorHint"
                            android:textColor="@color/Colortext"
                            android:id="@+id/mSurnameEdittext"
                            android:imeOptions="actionDone"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:hint="Surname"/>

                        <ImageView android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:tint="@color/colorPrimary"
                            />

                    </LinearLayout>





                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text"
                        android:orientation="horizontal">
                        <EditText android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textSize="14dp"
                            android:background="@null"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textColorHint="@color/ColorHint"
                            android:textColor="@color/Colortext"
                            android:id="@+id/mEmailEdittext"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:hint="Email"/>

                        <ImageView android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center" />

                    </LinearLayout>



                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text"
                        android:orientation="horizontal">
                        <EditText android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textSize="14dp"
                            android:background="@null"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:maxLength="15"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textColorHint="@color/ColorHint"
                            android:textColor="@color/Colortext"
                            android:id="@+id/mMobileEdittext"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:hint="Mobile Number"/>

                        <ImageView android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center" />

                    </LinearLayout>



                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/mDate_layout"
                        android:background="@drawable/edit_text"
                        android:orientation="horizontal">

                        <ImageView android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:id="@+id/mDateImg"
                            android:visibility="gone"
                            android:layout_marginLeft="5dp"
                            android:tint="@color/colorWhite"
                            app:srcCompat="@drawable/calendar"/>


                        <EditText android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textSize="14dp"
                            android:background="@null"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textColorHint="@color/ColorHint"
                            android:textColor="@color/Colortext"
                            android:id="@+id/mDateEdittext"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:hint="Date of birth"/>

                    </LinearLayout>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address Information"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"/>

                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text"
                        android:orientation="horizontal">
                        <EditText android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textSize="14dp"
                            android:background="@null"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textAlignment="textStart"
                            android:textColorHint="@color/ColorHint"
                            android:textColor="@color/Colortext"
                            android:id="@+id/mAddressEdittext"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:hint="Address"/>

                        <ImageView android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:tint="@color/colorPrimary"
                            android:layout_gravity="center" />

                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text"
                        android:orientation="horizontal">
                        <EditText android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textSize="14dp"
                            android:background="@null"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textAlignment="textStart"
                            android:textColorHint="@color/ColorHint"
                            android:textColor="@color/Colortext"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:hint="Country"/>

                        <ImageView android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:tint="@color/colorPrimary"
                            android:layout_gravity="center" />

                    </LinearLayout>


                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text"
                        android:orientation="horizontal">
                        <EditText android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textSize="14dp"
                            android:background="@null"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textAlignment="textStart"
                            android:textColorHint="@color/ColorHint"
                            android:textColor="@color/Colortext"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:hint="State"/>

                        <ImageView android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:tint="@color/colorPrimary"
                            android:layout_gravity="center" />

                    </LinearLayout>



                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text"
                        android:orientation="horizontal">
                        <EditText android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textSize="14dp"
                            android:background="@null"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textAlignment="textStart"
                            android:textColorHint="@color/ColorHint"
                            android:textColor="@color/Colortext"
                            android:id="@+id/mpinEdittext"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:hint="City"/>

                        <ImageView android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:tint="@color/colorPrimary"
                            />

                    </LinearLayout>




                <Button android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:textAllCaps="false"
                    android:id="@+id/mSubmitBtn"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/rounded_submit_button"
                    android:text="Submit"/>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>