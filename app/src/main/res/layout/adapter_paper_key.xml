<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
<RelativeLayout android:layout_width="match_parent"
              android:layout_height="200dp"
              android:orientation="horizontal" tools:ignore="MissingConstraints">
    <TextView android:layout_width="200dp"
            android:id="@+id/key_btn"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_height="100dp"
            android:textColor="@color/colorWhite"
              android:gravity="center"
              android:textStyle="bold"
            android:background="@drawable/home_gradient1"
            android:text=""
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:textColor="@color/colorWhite"
              android:gravity="center"
              android:id="@+id/keycount"
              android:text=""
              android:layout_centerHorizontal="true"
    android:layout_below="@+id/key_btn"/>
</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>